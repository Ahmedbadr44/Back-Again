rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "ahmedbadr004500@gmail.com";
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.email == request.auth.token.email;
      allow update: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    match /exercises/{exerciseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /activation_codes/{codeId} {
      allow read: if request.auth != null;
      allow create, delete: if isAdmin();
      allow update: if request.auth != null
        && resource.data.used == false
        && request.resource.data.used == true
        && request.resource.data.usedByUid == request.auth.uid;
    }

    match /site_stats/{docId} {
      allow read: if isAdmin();
      allow create, update: if docId == "visits";
    }
  }
}
